#include <stdio.h>

int adj[1000][1000];
int visited[1000];
int V, E;

void dfs(int node) {
    visited[node] = 1;
    for (int i = 0; i < V; i++) {
        if (adj[node][i] == 1 && !visited[i]) {
            dfs(i);
        }
    }
}

int main() {
    scanf("%d %d", &V, &E);

    for (int i = 0; i < V; i++)
        for (int j = 0; j < V; j++)
            adj[i][j] = 0;

    for (int i = 0; i < E; i++) {
        int u, v;
        scanf("%d %d", &u, &v);
        adj[u][v] = 1;
        adj[v][u] = 1;
    }

    int components = 0;

    for (int i = 0; i < V; i++) {
        if (!visited[i]) {
            dfs(i);
            components++;
        }
    }
