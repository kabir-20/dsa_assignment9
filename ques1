#include <iostream>
#include <queue>
#include <vector>
using namespace std;

int main() {
    int n = 5;
    vector<int> g[5];

    g[0] = {1, 2};
    g[1] = {0, 3};
    g[2] = {0, 4};
    g[3] = {1};
    g[4] = {2};

    queue<int> q;
    vector<bool> visited(n, false);

    int start = 0;
    visited[start] = true;
    q.push(start);

    cout << "BFS: ";
    while (!q.empty()) {
        int u = q.front();
        q.pop();
        cout << u << " ";

        for (int v : g[u]) {
            if (!visited[v]) {
                visited[v] = true;
                q.push(v);
            }
        }
    }
}



#include <iostream>
#include <vector>
using namespace std;

vector<int> g[5];
bool visited[5];

void dfs(int u) {
    visited[u] = true;
    cout << u << " ";

    for (int v : g[u])
        if (!visited[v])
            dfs(v);
}

int main() {
    g[0] = {1, 2};
    g[1] = {0, 3};
    g[2] = {0, 4};
    g[3] = {1};
    g[4] = {2};

    cout << "DFS: ";
    dfs(0);
}



#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;

struct Edge {
    int u, v, w;
};

int parent[100];

int find(int x) {
    if (parent[x] == x) return x;
    return parent[x] = find(parent[x]);
}

void unite(int a, int b) {
    parent[find(a)] = find(b);
}

int main() {
    vector<Edge> edges = {
        {0, 1, 10}, {0, 2, 6}, {0, 3, 5}, {1, 3, 15}, {2, 3, 4}
    };

    sort(edges.begin(), edges.end(), [](Edge a, Edge b) {
        return a.w < b.w;
    });

    for (int i = 0; i < 100; i++) parent[i] = i;

    cout << "Kruskal MST:\n";
    int cost = 0;

    for (auto e : edges) {
        if (find(e.u) != find(e.v)) {
            cout << e.u << " - " << e.v << " : " << e.w << endl;
            cost += e.w;
            unite(e.u, e.v);
        }
    }

    cout << "Total Cost = " << cost;
}


#include <iostream>
using namespace std;

int main() {
    int INF = 9999;
    int n = 5;

    int g[5][5] = {
        {0, 2, INF, 6, INF},
        {2, 0, 3, 8, 5},
        {INF, 3, 0, INF, 7},
        {6, 8, INF, 0, 9},
        {INF, 5, 7, 9, 0}
    };

    int selected[5] = {0};
    selected[0] = 1;

    cout << "Prim MST:\n";
    int edges = 0, cost = 0;

    while (edges < n - 1) {
        int min_w = INF, x = 0, y = 0;

        for (int i = 0; i < n; i++)
            if (selected[i])
                for (int j = 0; j < n; j++)
                    if (!selected[j] && g[i][j] < min_w) {
                        min_w = g[i][j];
                        x = i;
                        y = j;
                    }

        cout << x << " - " << y << " : " << g[x][y] << endl;
        cost += g[x][y];
        selected[y] = 1;
        edges++;
    }

    cout << "Total Cost = " << cost;
}
